<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/default_margin_half">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/header_txt_top"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/btxt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.85" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/header_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/icon1"
        app:layout_constraintBottom_toBottomOf="@id/header_circle"
        app:layout_constraintEnd_toEndOf="@id/header_circle"
        app:layout_constraintStart_toStartOf="@id/header_circle"
        app:layout_constraintTop_toTopOf="@id/header_circle" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/header_circle"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/bhc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/header_txt_start"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="40dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/btxt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/header_txt_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.375" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/header_txt_end"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="40dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/btxt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/header_txt_top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.375" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/header_score"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="25dp"
        android:fontFamily="@font/bitter"
        android:gravity="center"
        android:textColor="@color/md_theme_dark_background"
        app:layout_constraintBottom_toBottomOf="@id/header_txt_start"
        app:layout_constraintEnd_toEndOf="@id/header_txt_start"
        app:layout_constraintStart_toStartOf="@id/header_txt_start"
        app:layout_constraintTop_toTopOf="@id/header_txt_start"
        tools:text="888" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/header_guess_and_wins"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="25dp"
        android:fontFamily="@font/bitter"
        android:gravity="center"
        android:textColor="@color/md_theme_dark_background"
        app:layout_constraintBottom_toBottomOf="@id/header_txt_end"
        app:layout_constraintEnd_toEndOf="@id/header_txt_end"
        app:layout_constraintStart_toStartOf="@id/header_txt_end"
        app:layout_constraintTop_toTopOf="@id/header_txt_end"
        tools:text="0 / 2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/header_username"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="25dp"
        android:fontFamily="@font/bitter"
        android:gravity="center"
        android:textColor="@color/md_theme_dark_background"
        app:layout_constraintBottom_toBottomOf="@id/header_txt_top"
        app:layout_constraintEnd_toEndOf="@id/header_txt_top"
        app:layout_constraintStart_toStartOf="@id/header_txt_top"
        app:layout_constraintTop_toTopOf="@id/header_txt_top"
        tools:text="Pengu" />

</androidx.constraintlayout.widget.ConstraintLayout>